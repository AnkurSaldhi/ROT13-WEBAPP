<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.micropost_id %></td>
        <td><%= link_to 'Show', [comment.micropost, comment] %></td>
        <td><%= link_to 'Edit', edit_micropost_comment_path(comment.micropost, comment) %></td>
        <td><%= link_to 'Destroy', [comment.micropost, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_micropost_comment_path %>
