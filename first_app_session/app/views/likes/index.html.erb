<p id="notice"><%= notice %></p>

<h1>Listing Likes</h1>

<table class=table>
  <thead>
    <tr>
      <th>User</th>
      <th>Micropost</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @likes.each do |like| %>
      <tr>
        <td><%= like.user_id %></td>
        <td><%= like.micropost_id %></td>
        <td><%= link_to 'Show', like %></td>

        <td><%= link_to 'Destroy', like, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Like', new_like_path %>
